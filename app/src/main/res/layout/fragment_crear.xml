<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inmuebles.CrearFragment" >

    <EditText

        android:id="@+id/etAmbientes"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: 3"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAmbientes"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvAmbientes"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Ambientes"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvSuperficie"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:text="Superficie (m²)"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAmbientes"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etSuperficie"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: 120.5"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSuperficie"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvDireccion"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:text="Dirección"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSuperficie"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: Calle 123, Ciudad"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvUso"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:text="Uso"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etUso"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: Vivienda / Comercial"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUso"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:text="Tipo"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUso"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etTipo"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: Casa, Departamento, Lote..."
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTipo"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLatitud"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:text="Latitud"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etLatitud"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:hint="Ingresar Longitud/Latitud"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/etLongitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLatitud" />

    <TextView
        android:id="@+id/tvLongitud"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:text="Longitud"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvLatitud"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etLongitud"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:hint="-58.1234"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/etLatitud"
        app:layout_constraintTop_toBottomOf="@id/tvLongitud"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvValor"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:text="Valor (AR$)"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLatitud"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/etValor"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="Ej: 250000.00"
        android:inputType="numberDecimal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvValor"
        tools:ignore="HardcodedText" />

    <Button

        android:id="@+id/btnCargarImg"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_width="0dp"
        android:text="Seleccionar imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etValor"
        tools:ignore="HardcodedText" />

    <Button

        android:id="@+id/btnGuardar"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:padding="12dp"
        android:text="Guardar Inmueble"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCargarImg"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="68dp"
        android:src="@drawable/inmuebles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etValor" />
</androidx.constraintlayout.widget.ConstraintLayout>
