<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.tec.inmobile.ui.inicio.InicioFragment"
        android:label="@string/inicio"
        tools:layout="@layout/fragment_inicio2" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.tec.inmobile.ui.perfil.PerfilFragment"
        android:label="@string/perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.tec.inmobile.ui.inmuebles.InmueblesFragment"
        android:label="@string/inmuebles"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmueble"
            app:destination="@id/detalleInmueble" />
    </fragment>
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.tec.inmobile.ui.inquilinos.InquilinosFragment"
        android:label="@string/inquilinos"
        tools:layout="@layout/fragment_inquilinos" >
        <action
            android:id="@+id/action_nav_inquilinos_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.tec.inmobile.ui.contratos.ContratosFragment"
        android:label="@string/contratos"
        tools:layout="@layout/fragment_contratos" >
        <action
            android:id="@+id/action_nav_contratos_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.tec.inmobile.ui.logout.LogoutFragment"
        android:label="@string/logout"
        tools:layout="@layout/activity_logout" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.tec.inmobile.ui.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/detalleInmueble"
        android:name="com.tec.inmobile.ui.inmuebles.DetalleInmueble"
        android:label="DetalleInmueble" >
        <action
            android:id="@+id/action_detalleInmueble_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/crearFragment"
        android:name="com.tec.inmobile.ui.inmuebles.CrearFragment"
        android:label="Agregar Inmueble"
        tools:layout="@layout/fragment_crear" />
    <fragment
        android:id="@+id/detalleContratoFragment"
        android:name="com.tec.inmobile.ui.contratos.DetalleContratoFragment"
        android:label="fragment_detalle_contrato"
        tools:layout="@layout/fragment_detalle_contrato" >
        <action
            android:id="@+id/action_detalleContratoFragment_to_nav_contratos"
            app:destination="@id/nav_contratos" />
        <action
            android:id="@+id/action_detalleContratoFragment_to_pagosFragment"
            app:destination="@id/pagosFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagosFragment"
        android:name="com.tec.inmobile.ui.contratos.PagosFragment"
        android:label="fragment_pagos"
        tools:layout="@layout/fragment_pagos" />
</navigation>